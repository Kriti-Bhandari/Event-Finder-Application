<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:padding="24dp">
    <!-- App Logo or Icon Placeholder -->
    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/outline_event_available_24"
        android:contentDescription="App Logo"
        android:layout_marginTop="60dp"
        android:alpha="0.9"
        app:tint="#FFFFFF" />

    <!-- Welcome Text -->
<TextView
android:id="@+id/welcomeText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Welcome to Eventure!!"
android:textColor="#FFFFFF"
android:textSize="28sp"
android:textStyle="bold"
android:layout_below="@id/appLogo"
android:layout_marginTop="30dp"
android:layout_centerHorizontal="true"
android:fontFamily="sans-serif-medium" />

    <!-- Subtitle -->
<TextView
android:id="@+id/subtitleText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Your companion for event planning and discovery!"
android:textColor="#FFC1C1"
android:textSize="16sp"
android:layout_below="@id/welcomeText"
android:layout_marginTop="8dp"
android:layout_centerHorizontal="true"
android:fontFamily="sans-serif" />

    <!-- Register Button -->
<Button
android:id="@+id/btnRegister"
android:layout_width="match_parent"
android:layout_height="48dp"
android:text="Don't have an account? Register"
android:textColor="#8B0000"
android:textAllCaps="false"
android:background="@drawable/btn_white_rounded"
android:layout_marginTop="48dp"
android:layout_below="@id/subtitleText"
android:layout_centerHorizontal="true" />

    <!-- Login Button -->
<Button
android:id="@+id/btnLogin"
android:layout_width="match_parent"
android:layout_height="48dp"
android:text="Already have an account? Login"
android:textColor="#FFFFFF"
android:textAllCaps="false"
android:background="@drawable/btn_transparent_border"
android:layout_below="@id/btnRegister"
android:layout_marginTop="16dp"
android:layout_centerHorizontal="true" />

    </RelativeLayout>
