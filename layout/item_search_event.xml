<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView android:id="@+id/event_name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Event Name: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/event_description"
        android:textSize="14sp"
        android:text="Description : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/event_date"
        android:textSize="14sp"
        android:text="Date : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/event_location"
        android:textSize="14sp"
        android:text="Location : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/event_category"
        android:textSize="14sp"
        android:text="Category : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/event_ticket_price"
        android:textSize="14sp"
        android:text="Ticket Price : "
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/black"
        android:textColor="#FFFFFF"/>
</LinearLayout>
    </androidx.cardview.widget.CardView>

